<table class="aui">
  
  <tr>
    <th>Issue</th>
    <th>Summary</th>
    <th>Started</th>
    <th>Completed</th>
  </tr>

  {{#each epics}}

    <tr>
      <td>{{issue_link}}</td>
      <th>{{fields.summary}}</th>
      <th>{{date startedDate}}</th>
      <th>{{date completedDate}}</th>
    </tr>
  
    {{#each issues}}
    
      <tr>
        <td>{{issue_link}}</td>
        <td>{{fields.summary}}</td>
        <td>{{date startedDate}}</td>
        <td>{{date completedDate}}</td>
      </tr>
    
    {{/each}}

  {{/each}}
</table>
